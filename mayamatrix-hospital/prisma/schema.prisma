generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Roles {
  user
  doctor
}

enum Gender {
  male
  female
  other
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  username        String
  email           String
  phoneNumber     String
  role            Roles
  gender          Gender
  address         String
  appointmentTime DateTime
  DoctorAssigned  String
}
